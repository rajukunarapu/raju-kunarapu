{% schema %}
{
  "name": "Featured Collection",
  "settings": []
}
{% endschema %}

<section class="featured-collection">
  <div class="container">
    <h2>Tisso vision in the wild</h2>
    <div class="grid">
      {% for product in collections['all'].products limit:6 %}
        <div class="product">
          <img src="{{ product.featured_image | img_url }}" alt="{{ product.title }}">
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% style %}

.featured-collection {
  padding: 50px 0;
  text-align: center;
}

.container h2 {
  text-align: start;
  margin-left: 20px;
  font-weight: normal;
}

/* Fixing Uneven Gaps */
.grid {
  margin: 20px;
  display: grid;
  grid-template-columns: repeat(3, 1fr);  /* 3 products per row */
  column-gap: 15px;  /* Adjust column spacing */
  row-gap: 10px;  /* Adjust row spacing */
}

/* Fixing Image Stretching */
.product {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  overflow: hidden;
}

.product img {
  max-width: 100%;  /* Ensures image does not exceed container */
  height: 440px;  /* Maintains original aspect ratio */
  object-fit: cover;
  border-radius: 5px; /* Optional: Adds smooth rounded edges */
}
{% endstyle %}
