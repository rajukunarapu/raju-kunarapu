{% schema %}
{
  "name": "Featured Collection",
  "settings": []
}
{% endschema %}

<section class="featured-collection">
  <div class="container">
    <h2>Tisso vision in the wild</h2>
    <div class="grid">
      {% for product in collections['all'].products limit:6 %}
        <div class="product">
          <img src="{{ product.featured_image | img_url }}" alt="{{ product.title }}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
          <a href="{{ product.url }}" class="btn">View Product</a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
.container h2{
  text-align : start;
  margin-left : 20px;
  font-weight : normal;
}
.featured-collection {
  padding: 50px 0;
  text-align: center;
}
.grid {
  margin-top : 20px;
  display: flex;
  gap: 20px;
  justify-content: center;
  align-items : center;
}
.product {
  grid_column_start:1;
  grid_column_end :4;
  grid_row_start :1;
  grid_row_end :3;
  border: 1px solid #ddd;
  padding: 20px;
}
{% endstyle %}
