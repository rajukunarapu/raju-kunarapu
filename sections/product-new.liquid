{% schema %}
{
  "name": "Featured Collection",
  "settings": []
}
{% endschema %}

<section class="featured-collection">
  <div class="container">
    <h2>Tisso vision in the wild</h2>
    <div class="grid">
      <div class="product">
        <img src="{{ 'image 822img-1.png' | asset_url}}" alt="image-1" >
        <img src="{{ 'image 823 img-2.png' | asset_url}}" alt="image-2">
        <img src="{{ 'image 824img-3.png' | asset_url}}" alt="image-3">
        <img src="{{ 'image 825img-4.png' | asset_url}}" alt="image-4">
        <img src="{{ 'image 826 img-5.png' | asset_url}}" alt="image-5">
        <img src="{{ 'image 827img-6.png' | asset_url}}" alt="image-6">
      </div>
    </div>
  </div>
</section>

{% style %}

.featured-collection {
  padding: 50px 0;
  text-align: center;
}

.container h2 {
  text-align: start;
  margin-left: 20px;
  font-weight: normal;
}

/* Fixing Uneven Gaps */
.grid {
  margin: 20px;
  display: grid;
  grid-template-columns: repeat(3, 1fr);  /* 3 products per row */
  column-gap: 15px;  /* Adjust column spacing */
  row-gap: 10px;  /* Adjust row spacing */
}

/* Fixing Image Stretching */
.product {
  padding: 10px;
  overflow: hidden;
}

.product img {
  max-width: 100%;  /* Ensures image does not exceed container */
  height: auto;  /* Maintains original aspect ratio */
  object-fit: cover;
  border-radius: 5px; /* Optional: Adds smooth rounded edges */
}
{% endstyle %}
