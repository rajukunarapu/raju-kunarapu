{% schema %}
{
  "name": "Hero Banner",
  "settings": [
  ],
}
{% endschema %}

<section class="hero-banner" style="background-image: url('{{ section.settings.background_image | img_url: 'large' }}');">
  <div class="container">
    <h1>{{ section.settings.heading }}</h1>
    <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_label }}</a>
  </div>
</section>

{% style %}
.hero-banner {
  text-align: center;
  padding: 50px;
  background-size: cover;
}
.btn {
  display: inline-block;
  padding: 10px 20px;
  background: black;
  color: white;
  text-decoration: none;
}
{% endstyle %}