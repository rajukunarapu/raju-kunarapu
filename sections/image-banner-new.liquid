{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "image_picker",
      "id": "background_imag",
      "label": "Background Image"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}

<section class="hero-banner" style="background-image: url('{{ section.settings.background_image | img_url: 'large' }}');">
  <div class="container">
    <h1>{{ section.settings.heading }}</h1>
    <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_label }}</a>
  </div>
</section>

{% style %}
.hero-banner {
  text-align: center;
  padding: 50px;
  background-size: cover;
}
.btn {
  display: inline-block;
  padding: 10px 20px;
  background: black;
  color: white;
  text-decoration: none;
}
{% endstyle %}